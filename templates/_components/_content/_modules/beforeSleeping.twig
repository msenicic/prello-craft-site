{% set heading     = module.heading %}
{% set text        = module.text %}
{% set topText     = module.topText %}
{% set personImage = module.personImage.one() %}
{% set superTable  = module.randomStory.all() %}
{% set bgImage     = module.backgroundImage.one() %}
{% set moduleId    = module.moduleId %}

<section id="{{ moduleId ?: 'module-' ~ moduleIndex }}" class="beforeSleeping" style="background-image: url({{ bgImage.url }})">
    <div class="container">
        <div class="person">
            <div class="topText">
                <img src="{{ siteUrl }}assets/images/Fill-2.png" alt="">
                <p>" {{ topText}} "</p>
            </div>
            <div class="image"><img src="{{ personImage.url }}" alt=""></div>
            <div class="shape"></div>
        </div>
        <div class="text">
            <div class="title"><p>{{ heading }}</p></div>
            <div class="description"><p>{{ text }}</p></div>
        </div>
        {% for randomStory in superTable %}
            {% set character      = randomStory.character.one() %}
            {% set topTitle       = randomStory.topTitle %}
            {% set heading        = randomStory.heading %}
            {% set text           = randomStory.text %}
            {% set btnText        = randomStory.btnText %}
            {% set btnDestination = randomStory.btnDestination.one() %}
            <div class="story">
                <div class="character"><img src="{{ character.url }}" alt=""></div>
                <div class="topTitle"><p>{{ topTitle }}</p></div>
                <div class="title"><p>{{ heading }}</p></div>
                <div class="text"><p>{{ text }}</p></div>
                <div class="button">
                    <a href="{{ btnDestination.url }}"><span>{{ btnText }}</span><i class="fas fa-long-arrow-alt-right"></i></a>
                </div>
            </div>
        {% endfor %}
    </div>
</section>